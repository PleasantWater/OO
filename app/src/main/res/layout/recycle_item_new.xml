        android:layout_height="wrap_content"
        android:id="@+id/rv_new_pic"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>