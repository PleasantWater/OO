<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="80dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_recycle_item_text_message_send"
        android:background="@drawable/ic_message_send_bg"
        tools:text="只有24小时啊！再怎么逼一天也只有24小时啊！再怎一天也只有24小时啊！再怎一天也只有24小时啊！再怎一天也只有24小时啊！再怎一天也只有24小时啊！再怎一天也只有24小时啊！再怎么逼一天也只有24小时啊！"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="end"
        android:layout_toStartOf="@id/iv_user_head"
        android:layout_marginEnd="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_user_head"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@android:color/black"/>

</RelativeLayout>